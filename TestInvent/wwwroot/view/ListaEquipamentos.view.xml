<mvc:View
   controllerName="ui5.testinvent.controller.ListaEquipamentos"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
	<Panel accessibleRole="Region">
		<headerToolbar>
			<Toolbar>
				<Title text="Listagem"/>
				<ToolbarSpacer/>
				<content>
					<Button
					   text="Teste"
					   press=".onShow"
					   class="myCustomButton"/>
					
				</content>
				<SearchField
					width="50%"
					search=".onFilterInvoices"/>
			</Toolbar>
		</headerToolbar>
		<Table
		  id="listaEquipamentos"
		  headerText="Equipamentos"
		  class="sapUiResponsiveMargin"
		  width="auto"
		  items="{path: 'equipamentos>/'}" >
			
			<columns>
				<Column
					hAlign="End"
					minScreenWidth="Small"
					demandPopin="true"
					width="5em">
					<Text text="Quantidade" />
				</Column>
				<Column>
					<Text text="Nome" />
				</Column>
				
			</columns>
			<items>
				<ColumnListItem
					type="Navigation"
					press=".onPress">
					<cells>
						<ObjectNumber
							number="{equipamentos>quantidadeEmEstoque}"
							emphasized="false"/>
						<ObjectIdentifier title="{equipamentos>nome}" />
						
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Panel>
 
</mvc:View>