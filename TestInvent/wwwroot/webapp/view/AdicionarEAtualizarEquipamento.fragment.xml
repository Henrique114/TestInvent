<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
    <Dialog id="idCadastroEAlterar" title="{i18n>tituloPaginaAdicionar}" afterClose="onDialogClose" >
        <content>
       	    <VBox class="sapUiSmallMargin">
                <f:Form id="FormDisplayAddEdit"
                    editable="false">
                    <f:layout>
                        <f:ResponsiveGridLayout
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false" />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                             <f:FormElement label="{i18n>labelNome}" >
                                    <f:fields>
                                        <Input  value="{modeloEquipamento>/nome}" 
                                                id="formularionome"  
                                                required="true"  
                                                class="sapUiTinyMarginBegin"
                                                placeholder="Digite o nome do equipamento."/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>labelTipo}">
                                    <f:fields>
                                        <Select
                                                forceSelection="false"
                                                selectedKey="{modeloTipoEquipamento>/tipoSelecionado}"
                                                items="{
                                                    path: 'modeloTipoEquipamento>/tipos',
                                                    sorter: { path: 'Descricao' }
                                                }"
                                                id="formulariotipo"
                                                change="aoSelecionarTipo"
                                                required="true"
                                                >
                                                <core:Item key="{modeloTipoEquipamento>tipos/Tipo}" text="{modeloTipoEquipamento>tipos/Descricao}" />
                                        </Select>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement  label="{i18n>labelQuantidade}">
                                    <f:fields>
                                        <Input  value="{modeloEquipamento>/quantidadeEmEstoque}" 
                                                id="formularioquantidade"  
                                                required="true"  
                                                class="sapUiTinyMarginBegin" 
                                                type="Number" 
                                                placeholder="Digite a quantidade."/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>labelDescricao}">
                                    <f:fields>
                                        <Input  value="{modeloEquipamento>/descricao}" 
                                                id="formulariodescricao"  
                                                required="true"  
                                                class="sapUiTinyMarginBegin"
                                                placeholder="Digite a quantidade."/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
	        </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnSalvar}"  class="sapUiTinyMarginEnd" type="Emphasized" id="btnSalvarTelaCadastro" press="aoPrecionarSalvar"/>
            <Button text="{i18n>btnCancelar}" type="Ghost" id="btnCancelarTelaCadastro" press="aoPrecionarFechar"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>