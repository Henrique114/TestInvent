<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
    <Dialog id="idAdicionarEditar" title="{= ${novoEquipamento>/nome} ? ${i18n>btnEditarEquipamento} : ${i18n>btnAdicionarEquipamento} }" >
        <content>
       	    <VBox >
                <f:Form id="formularioAdicionarEditar"
                        editable="true"
                        class="sapUiResponsiveMargin sapUiMediumMarginTop">
                    <f:layout>
                        <f:ResponsiveGridLayout
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false" />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                             <f:FormElement label="{i18n>labelNome}" >
                                    <f:fields>
                                        <Input  value="{novoEquipamento>/nome}" 
                                                name="nome" 
                                                id="formularionome"  
                                                required="true"  
                                                placeholder="{i18n>preencherNome}"
                                                liveChange=".aoDigitar"
                                                />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>labelTipo}">
                                    <f:fields>
                                        <Select
                                                forceSelection="false"
                                                selectedKey="{novoEquipamento>/tipo}"
                                                items="{
                                                    path: 'modeloTipoEquipamento>/',
                                                    sorter: { path: 'descricao' }
                                                }"
                                                id="formulariotipo"
                                                required="true">
                                            <core:Item key="{modeloTipoEquipamento>chave}" text="{modeloTipoEquipamento>descricao}" />
                                        </Select>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement  label="{i18n>labelQuantidade}">
                                    <f:fields>
                                        <Input  value="{novoEquipamento>/quantidadeEmEstoque}" 
                                                id="formularioquantidade"  
                                                required="true"  
                                                type="Number" 
                                                placeholder="{i18n>preencherQuantidade}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>labelDescricao}">
                                    <f:fields>
                                        <Input  value="{novoEquipamento>/descricao}" 
                                                id="formulariodescricao"  
                                                placeholder="{i18n>preencherDescricao}"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
	        </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnSalvar}"  class="sapUiTinyMarginEnd" type="Emphasized" id="btnSalvarTelaCadastro" press="aoSalvar"/>
            <Button text="{i18n>btnCancelar}" type="Ghost" id="btnCancelarTelaCadastro" press="aoFecharFormulario"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>