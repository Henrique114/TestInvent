<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
    <Dialog id="idDialogDetalhes" afterClose="onDialogClose" >
    <customHeader>
        <Bar>
            <contentLeft>
                <Title 
					text="{equipamentoSelecionadoLista>/nome}" 
					level="H1"/>
            </contentLeft>
			<contentRight>
				<Button
					id="btnEditarEquipamentoPgDetalhes"
					icon="sap-icon://edit"
					press=".aoIrParaAdicionarEEditarEquipamento"/>
			</contentRight>
        </Bar>
    </customHeader>
        <content>
       	    <VBox class="sapUiSmallMargin">
                <f:Form id="FormDisplay354"
                    editable="false">
                    <f:layout>
                        <f:ResponsiveGridLayout
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false" />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="{i18n>tipo}">
                                    <f:fields>
                                        <Text text="{equipamentoSelecionadoLista>/descricaoDoTipo}" id="nameText"  />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>tituloquantidade}">
                                    <f:fields>
                                        <Text text="{equipamentoSelecionadoLista>/quantidadeEmEstoque} {i18n>unidade}" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>dataInclusao}">
                                    <f:fields>
                                        <Text text="{
                                                path: 'equipamentoSelecionadoLista>/dataDeInclusao',
                                                type: 'sap.ui.model.type.Date',
                                                formatOptions: {
                                                    style: 'short'
                                                }                                         
										}" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>descricaoEquipamento}">
                                    <f:fields>
                                        <Text text="{equipamentoSelecionadoLista>/descricao}" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>disponibilidadeEquipamento}">
                                    <f:fields>
                                        <Text text="{= ${equipamentoSelecionadoLista>/temEmEstoque} === true ? ${i18n>txtDisponivel} : ${i18n>txtIndisponivel} }" />
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
	        </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnFechar}" press="aoPressionarFecharDetalhes"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>