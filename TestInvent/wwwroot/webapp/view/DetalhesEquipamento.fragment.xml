<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="idDialog" title="{modeloDialogo>/nome}" afterClose="onDialogClose" >
    <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            number="{modeloDialogo>/quantidadeEmEstoque}"
            numberUnit="Und."
			title="{modeloDialogo>/tipo}">
            <attributes>
                <ObjectAttribute
                    title="{i18n>dataInclusao}"
                    text="{
                        path: 'modeloDialogo>/dataDeInclusao',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                           style: 'short'
                        }
					}" 
                    />
                    <ObjectAttribute
                    title="{i18n>descricaoEquipamento}"
                    text="{modeloDialogo>/descricao}" 
                   /> 
                <ObjectAttribute
                    title="{i18n>disponibilidadeEquipamento}"
                    text="{= ${modeloDialogo>/temEmEstoque} === true ? 'Sim' : 'NÃ£o' }" 
                    />
                </attributes>
			</ObjectHeader>
    <buttons>
      <Button text="{i18n>btnFechar}" press="aoPrecionarFechar"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>