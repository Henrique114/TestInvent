<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="idDialog" title="{i18n>tituloPaginaDetalhes}" afterClose="onDialogClose" >
    <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            number="{modeloDialogo>/quantidadeEmEstoque}"
            numberUnit="Und."
            intro="{modeloDialogo>/tipo}"
			   title="{modeloDialogo>/nome}">
			  <attributes>
                <ObjectAttribute
                    title="{i18n>dataInclusao}"
                    text="{
                        path: 'modeloDialogo>/dataDeInclusao',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                           style: 'medium'
                           
                     }
					}"/>
                </attributes>
			</ObjectHeader>
    <buttons>
      <Button text="Fechar" press="aoPrecionarFechar"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>