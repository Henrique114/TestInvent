<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
    <Dialog id="idDialog" afterClose="onDialogClose" >
    <customHeader>
        <Bar>
            <contentLeft>
                <Title 
					text="{modeloDialogo>/nome}" 
					level="H1"/>
            </contentLeft>
			<contentRight>
				<Button
					id="btnNovoEquipamentoPgDetalhes"
					text="{i18n>btnEditarEquipamento}"
					press=".aoIrParaEditarEquipamento"/>
			</contentRight>
        </Bar>
    </customHeader>
        <content>
       	    <VBox class="sapUiSmallMargin">
                <f:Form id="FormDisplay354"
                    editable="false">
                    <f:layout>
                        <f:ResponsiveGridLayout
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="1"
                            columnsL="1"
                            columnsM="1"
                            singleContainerFullSize="false" />
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer>
                            <f:formElements>
                                <f:FormElement label="Tipo">
                                    <f:fields>
                                        <Text text="{modeloDialogo>/tipo}" id="nameText"  />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>tituloquantidade}">
                                    <f:fields>
                                        <Text text="{modeloDialogo>/quantidadeEmEstoque} {i18n>unidade}" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>descricaoEquipamento}">
                                    <f:fields>
                                        <Text text="{modeloDialogo>/descricao}" />
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="{i18n>disponibilidadeEquipamento}">
                                    <f:fields>
                                        <Text text="{= ${modeloDialogo>/temEmEstoque} === true ? 'Disponivel' : 'NÃ£o Disponivel' }" />
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
	        </VBox>
        </content>
        <buttons>
            <Button text="{i18n>btnFechar}" press="aoPrecionarFechar"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>